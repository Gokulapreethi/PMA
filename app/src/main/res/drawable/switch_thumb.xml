<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
               >
                <shape>
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="#33FF4C"
                        android:centerColor="#33FF4C"
                        android:endColor="#33FF4C"
                        android:angle="-90" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
               >
                <shape>
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="#FFFFFF"
                        android:centerColor="#FFFFFF"
                        android:endColor="#FFFFFF"
                        android:angle="-90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
