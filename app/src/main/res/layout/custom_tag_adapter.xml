<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearsLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fieldname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="left"
            android:layout_marginTop="12dp"
            android:padding="7dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageValue"
            android:layout_width="1dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />

        <!--         <org.cryse.android.controls.RoundedImageView -->
        <!--             android:id="@+id/imageValue" -->
        <!--             android:layout_width="100dp" -->
        <!--             android:layout_height="75dp" -->
        <!--             android:layout_gravity="left" -->
        <!--             android:scaleType="center" -->
        <!--             android:visibility="gone" /> -->

        <EditText
            android:id="@+id/fieldvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1.25"
            android:maxLines="2"
            android:gravity="center"
            android:imeOptions="flagNavigateNext"
            android:textColor="@color/black"
            android:visibility="gone" />
        <Spinner
            android:id="@+id/spinnerValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:gravity="center"
            android:background="@drawable/edittextstyle"
            android:imeOptions="flagNavigateNext"
            android:textColor="#808080"
            android:visibility="gone" />

        <com.myapplication3.MultiSelectionSpinner
            android:id="@+id/mySpinner1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:gravity="center"
            android:background="@drawable/edittextstyle"
            android:imeOptions="flagNavigateNext"
            android:textColor="#808080"
            android:visibility="gone"/>

        <Button
            android:id="@+id/fieldButton"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:text="Set"
            android:background="@color/appcolor"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:imeOptions="flagNavigateNext"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.2"
            android:background="@drawable/gallery_pic"
            android:gravity="left"
            android:imeOptions="flagNavigateNext"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/locateButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.2"
            android:src="@drawable/mapimage"
            android:gravity="left"
            android:imeOptions="flagNavigateNext"
            android:textColor="#FFFFFF"
            android:visibility="gone" />


        <TextView
            android:id="@+id/fieldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1.25"
            android:gravity="center_vertical"
            android:maxLength="100"
            android:textColor="#808080"
            android:visibility="gone" />

        <Switch
            android:id="@+id/fieldSwitch"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:switchMinWidth="50dp"
            android:textOff=" "
            android:textOn=" "
            android:thumbTextPadding="10dp"
            android:thumb="@drawable/switchthump"
            android:track="@drawable/switchtracter"
            android:visibility="gone"/>



    </LinearLayout>

    <View
        android:id="@+id/view_land"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:layout_below="@+id/linearsLayout1"
        android:background="@color/gray" />



      <!--  <LinearLayout
            android:id="@+id/audio_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" />

        <Button
            android:id="@+id/options"
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/headset"
            android:gravity="center_vertical"
            android:visibility="visible"
            />
    </LinearLayout>-->

</LinearLayout>
