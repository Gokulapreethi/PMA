<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapplication3.TaskDateUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_multiply_100" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/submit"
                android:layout_weight="1"
                android:text="Request Change of Dates"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_paper_plane_100" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Start Date:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Start_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:paddingRight="10dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="End Date:"
                    android:textAlignment="gravity"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/End_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:paddingRight="10dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_3"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Reminder Date:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Reminder_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:paddingRight="10dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5dp"

                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Repeat Frequency:"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/repeat_min"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1" />

                    <EditText
                        android:id="@+id/Reminder_freq"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_5"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Repeat Frequency:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Reminder_freq_local"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:paddingRight="10dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_5"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Remarks"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle1"
                    android:paddingRight="10dp">

                    <requestFocus />

                </EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/content1"
                android:layout_below="@+id/ll_6"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <com.baoyz.swipemenulistview.SwipeMenuListView
                    android:id="@+id/takers_listOfFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_above="@+id/content1"
        android:background="@color/appcolor" />

    <LinearLayout
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="fill|bottom|center|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/taker_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/photo"
            android:layout_weight="1"
            android:background="@drawable/ic_audio_file_100"
            android:gravity="center" />

        <Button
            android:id="@+id/taker_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/write"
            android:layout_weight="1"
            android:background="@drawable/ic_compact_camera_100"
            android:gravity="center" />

        <Button
            android:id="@+id/taker_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_marker_pen_100"
            android:gravity="center"
            android:visibility="visible" />


        <Button
            android:id="@+id/taker_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/audio"
            android:layout_weight="1"
            android:background="@drawable/ic_video_message_100"
            android:gravity="center" />


        <Button
            android:id="@+id/taker_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_attach_100"
            android:gravity="center" />


        <Button
            android:id="@+id/taker_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/video"
            android:layout_weight="1"
            android:background="@drawable/ic_phone_100"
            android:gravity="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/taker_calender_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_calendartask"
            android:gravity="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/taker_updatelevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/percen1"
            android:gravity="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/taker_update_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/ic_geo_fence_32_1"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
