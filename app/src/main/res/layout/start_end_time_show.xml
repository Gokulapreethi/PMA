<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_back_100"
            android:drawablePadding="-10dp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:text="Back"
            android:textColor="@color/appcolor"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/back"
            android:layout_weight="15"
            android:text="project"
            android:textColor="@color/appcolor"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/send_travel_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.005"
            android:src="@drawable/ic_paper_plane_100"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.20dp"
        android:layout_below="@+id/header_menu"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="7dp"
            android:singleLine="true"
            android:text="Start DateTime"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/travelstart_sign"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_date_chang_request" />

        <TextView
            android:id="@+id/travel_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLength="100"
            android:textColor="#808080"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.20dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="7dp"
            android:singleLine="true"
            android:text="End DateTime"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/travelend_sign"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_date_chang_request" />

        <TextView
            android:id="@+id/travel_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLength="100"
            android:textColor="#808080"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.20dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />
</LinearLayout>

