<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/resend_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/resend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Resend"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Delete"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/delete_alltv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Clear History"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/withdraw_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/withdraw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="withdraw"
                android:textColor="@color/appcolor"
                android:textSize="20dp"
                 />
            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/copy_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/copy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Copy"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forword_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/forword_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Forward"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/reply_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Reply"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderfordialog"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Edit"
                android:textColor="@color/appcolor"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderfordialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:text="Cancel"
            android:textColor="@color/appcolor"
            android:textSize="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
    </LinearLayout>

</LinearLayout>