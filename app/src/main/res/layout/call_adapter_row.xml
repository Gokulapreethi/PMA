<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/callername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/avatar_image"
            android:paddingLeft="1dp"
            android:paddingRight="3dp"
            android:singleLine="false"
            android:text="Name "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/user_presence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/callername"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar_image"
            android:paddingLeft="1dp"
            android:paddingRight="3dp"
            android:singleLine="false"
            android:text="status"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/individual_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/redial"
            android:visibility="gone"
            android:src="@drawable/chat_icon_blue" />

        <ImageView
            android:id="@+id/redial"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="8dp"
            android:src="@drawable/hangup" />

    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/user_layout"
        android:background="@color/gray" />

</RelativeLayout>