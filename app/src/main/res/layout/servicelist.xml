<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/checklist_master"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/default_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checklist_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_back_100"
                android:drawablePadding="-10dp"
                android:gravity="center|start"
                android:text="Back"
                android:textColor="@color/appcolor"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/back"
                android:layout_weight="15"
                android:gravity="center"
                android:text="SERVICE CHECKLIST"
                android:textColor="@color/appcolor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/send_completion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.005"
                android:src="@drawable/ic_paper_plane_100"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.20dp"
            android:background="@color/gray" />

        <TableLayout
            android:id="@+id/taskidrowfortasklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.20"
                            android:gravity="start"
                            android:text="Customer Name"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.03"
                            android:gravity="start"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checklist_cust_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.45"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text=" Dummy "
                            android:textColor="@color/black2"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_marginLeft="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.10"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text="Date"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/checklist_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="5sp"
                            android:layout_weight="0.23"
                            android:textColor="@color/black2"
                            android:textSize="15sp" />


                    </LinearLayout>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.20"
                            android:gravity="start"
                            android:text="Customer Address"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.03"
                            android:gravity="start"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checklist_cust_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.45"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text=" Dummy "
                            android:textColor="@color/black2"
                            android:textSize="15sp" />

                    </LinearLayout>
                </TableLayout>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="Unit Details"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableLayout
                    android:id="@+id/takertable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.20"
                            android:gravity="start"
                            android:text="Machine Serial #"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.03"
                            android:gravity="start"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checklist_machineNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.45"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text=" Dummy "
                            android:textColor="@color/black2"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/task_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_marginLeft="1dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.10"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text="HMR"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/checklist_HMR"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="5sp"
                            android:layout_weight="0.23"
                            android:textColor="@color/black2"
                            android:textSize="15sp" />
                    </LinearLayout>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.20"
                            android:gravity="start"
                            android:text="Make/Modal #"
                            android:textColor="@color/black2"
                            android:textDirection="firstStrong"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.03"
                            android:gravity="start"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checklist_machineMac"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.45"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text=" Dummy "
                            android:textColor="@color/black2"
                            android:textSize="15sp" />
                    </LinearLayout>
                </TableLayout>
            </TableLayout>
        </TableLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#9E9E9E"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:visibility="visible">

    </ListView>

    <TextView
        android:id="@+id/stickyView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appcolor"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="250 Hrs CheckList"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />


</FrameLayout>

