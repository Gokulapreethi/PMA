<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapplication3.TaskDateUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:background="@drawable/ic_multiply_100" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Task Dates"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:src="@drawable/ic_paper_plane_100" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--<LinearLayout-->
            <!--android:id="@+id/ll_1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingRight="10dp">-->

            <!--<TextView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20sp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_weight="20"-->
            <!--android:gravity="center"-->
            <!--android:singleLine="true"-->
            <!--android:text="Name"-->
            <!--android:textSize="30px" />-->

            <!--<EditText-->
            <!--android:id="@+id/taskname"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20sp"-->
            <!--android:layout_marginRight="10sp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_weight="8"-->
            <!--android:background="@drawable/edittextstyle"-->
            <!--android:gravity="left"-->
            <!--android:paddingRight="10dp"-->
            <!--android:textColor="@color/white" />-->

            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/ll_tmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Duration:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/duration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:gravity="left"
                    android:inputType="number"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tmu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Duration Unit:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/duration_unit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:gravity="left"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tmf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Repeat Frequency:"
                    android:textSize="16sp" />

                <!--<EditText
                    android:id="@+id/repeat_frequency"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:gravity="left"
                    android:paddingRight="10dp" />-->

                <LinearLayout
                    android:id="@+id/ll_tmf_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/temp_min"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5dp"
                        android:digits="1234567890"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/repeat_frequency"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Start Date:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Start_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:textSize="15dp"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="End Date:"
                    android:textAlignment="gravity"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/End_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="13"
                    android:textSize="15dp"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:paddingRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_3"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Reminder Date:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Reminder_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="18"
                    android:textSize="15dp"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:paddingRight="10dp" />
                <Switch
                    android:id="@+id/reminder_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:paddingRight="10dp"
                    android:switchMinWidth="50dp"
                    android:textOff=" "
                    android:textOn=" "
                    android:thumbTextPadding="10dp"
                    android:thumb="@drawable/switchthump"
                    android:track="@drawable/switchtracter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_4"
                android:paddingRight="10dp"
                android:weightSum="6"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Repeat Frequency:"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/ll_5_1"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText

                        android:id="@+id/repeat_min"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15sp"
                        android:layout_toLeftOf="@+id/Reminder_freq"
                        android:layout_marginRight="2sp"
                        android:digits="1234567890"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/Reminder_freq"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_toLeftOf="@+id/repeat_frequency_switch"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittextstyle2"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:gravity="center" />

                    <Switch
                        android:id="@+id/repeat_frequency_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:switchMinWidth="50dp"
                        android:textOff=" "
                        android:textOn=" "
                        android:thumbTextPadding="10dp"
                        android:thumb="@drawable/switchthump"
                        android:track="@drawable/switchtracter" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_5"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="20"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Repeat Frequency:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Reminder_freq_local"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="13"
                    android:background="@drawable/edittextstyle"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:paddingRight="10dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20sp"
                android:gravity="left"
                android:lineSpacingMultiplier="0.9"
                android:singleLine="true"
                android:text="Reminder Quote:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/Reminder_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextstyle1"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/rem_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Reminder Tone:"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_audio_file_100" />

                <LinearLayout
                    android:id="@+id/rem_audio_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/audio"
                    android:background="@drawable/item_bg_color"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/play_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/play" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/play_button"
                        android:text="00:00"
                        android:textColor="@color/blue"
                        android:visibility="visible" />


                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_time"
                        android:progressDrawable="@drawable/progress" />
                    <!--android:thumb="@drawable/seek_handler" />-->

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Repeat Pattern" />

            <RelativeLayout
                android:id="@+id/l1_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_play"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <RadioGroup
                    android:id="@+id/repeat_ends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/dayofWeeks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:enabled="true"
                        android:text="Days of Weeks" />

                    <RadioButton
                        android:id="@+id/daysofMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:text="Days of Month" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l1_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_play"
                android:paddingRight="10dp"
                android:visibility="gone">

                <ListView
                    android:id="@+id/list_daysofWeeks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </RelativeLayout>

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:numColumns="7"
                android:scrollbars="horizontal"></GridView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>