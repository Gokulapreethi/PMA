<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/reply">

    <RelativeLayout
        android:id="@+id/rlay_tilte"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/lightgray"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/fsr_back"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/appcolor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="FSR REPORT"
            android:textColor="@color/appcolor"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view_land"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:layout_below="@+id/rlay_tilte"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/rlay_tilte"
        android:orientation="vertical"
        android:background="@color/reply">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlay_tilte"
        android:id="@+id/jobcard_number"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_land"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background"
            android:text="Job Card NO :"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/job_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/jobcard"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/jobcard_number">

        <TextView
            android:id="@+id/Date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/view_land"
            android:textColor="@color/background"
            android:text="Date:                "
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/date_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:prompt="@string/date"/>


    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone">

          <Button
              android:id="@+id/fsr_submit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Submit"
              android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
